SELECT 1
USE BCOPECTA INDEX BCOPECTA
SELECT 2
USE SYSUSER INDEX SYSUSER
SELECT 3
USE BCCTAS INDEX BCCTAS

SAVE SCRE TO WSCRE99
STORE .T. TO VIENDO
DO WHILE VIENDO
   RESTORE SCRE FROM WSCRE99
  *STORE 0 TO WTOTAL
   STORE SPACE(8) TO XUSERCODE
   STORE SPACE(4) TO XCUENTA
   STORE "MARICO" TO WRUPOPE
   @ 04,0 clear to 12,40
   @ 04,0 to 12,40
   @ 04,9 SAY " OPERADORES POR CUENTA"
   @ 06,1 say "USUARIO     :"
   @ 08,1 say "CUENTA      :"
   @ 10,1 say "SALIDA (M/I):"
   @ 06,14 GET XUSERCODE
   READ
   IF READKEY()=12 .OR. READKEY()=268
      EXIT
   ENDIF
   IF XUSERCODE=SPACE(8)
      STORE "TODOS" TO WUSERDES
   ELSE
      STORE "  "    TO WUSERDES
   ENDIF
   @ 06,25 SAY WUSERDES

   @ 08,14 GET XCUENTA
   READ
   IF READKEY()=12 .OR. READKEY()=268
      EXIT
   ENDIF
   IF XCUENTA=SPACE(4)
      STORE "TODAS" TO WCTADES
   ELSE
      STORE "  "    TO WCTADES
   ENDIF
   @ 08,25 SAY WCTADES

   STORE "SELECCIONE LA SALIDA: (M)ONITOR, (I)MPRESORA" TO TEX
   STORE "MI" TO WCH
   DO PREGUNTA
   IF READKEY()=12 .OR. READKEY()=268
      LOOP
   ENDIF
   STORE WCH TO WSALIDA
   STORE 0   TO WPAGINA
   STORE 100 TO WLINEA
   IF WSALIDA = "I"
      STORE 55 TO WSALTO
      STORE "IMPRESORA" TO WSALIDES
   ELSE
      STORE 22 TO WSALTO
      STORE "MONITOR" TO WSALIDES
   ENDIF
   @ 10,20 SAY WSALIDES

   STORE "OPCIONES: (C)ONTINUAR, (S)ALIR" TO TEX
   STORE "CS" TO WCH
   DO PREGUNTA
   IF WCH = "S"
      exit
   ENDIF
   IF WSALIDA = "I"
      SET DEVI TO PRINT
   ELSE
      SET DEVI TO SCRE
   ENDIF

   SELECT 1
   GO TOP
   DO WHILE .NOT. EOF()
      *** FILTROS
      IF XUSERCODE <> SPACE(8) .AND. XUSERCODE <> OPERADOR
         SELECT 1
         SKIP
         LOOP
      ENDIF
      IF XCUENTA <> SPACE(4) .AND. XCUENTA <> CTA
         SELECT 1
         SKIP
         LOOP
      ENDIF
      *** FIN FILTROS
      STORE WLINEA+1 TO WLINEA
      IF WLINEA >=WSALTO
         STORE WPAGINA + 1 TO WPAGINA
         IF WSALIDA = "M"
            if WPAGINA <> 1
               STORE "OPRIMA <ENTER> PARA CONTINUAR o <ESC> PARA SALIR" TO MES
               DO AVISO WITH MES
               IF READKEY()=12 .OR. READKEY()=268
                  EXIT
               ENDIF
            endif
            @ 0,0 clear
         ENDIF
         IF WSALIDA = "M"
            @ 0,0 SAY QQWW
         ELSE
            @ 0,0 SAY CHR(14)+QQWW
         ENDIF
         @ 1,60 SAY "PAGINA:"+STR(WPAGINA,4)
         @ 2,00 SAY "LISTADO DE OPERADORES POR CUENTA"
         @ 2,60 SAY "FECHA :"+DTOC(DATE())
         @ 4,00 SAY "OPERADOR"
         @ 4,00 SAY "NOMBRE DEL OPERADOR"
         @ 4,40 SAY "CUENTA"
         @ 4,48 SAY "NOMBRE DE LA CUENTA"
         @ 5,00 SAY "------"
         @ 5,08 SAY "------------------------------"
         @ 5,40 SAY "------"
         @ 5,48 SAY "------------------------------"
         STORE 6 TO WLINEA
      ENDIF
      SELECT 1
      STORE CTA      TO WCTA
      STORE OPERADOR TO WOPERADOR
      SELECT 3
      FIND &WCTA
      IF EOF()
         STORE "NO REGISTRADA EN MAESTRO" TO WCTADES
      ELSE
         STORE DESCRI                     TO WCTADES
      ENDIF

      IF WOPERADOR <> WRUPOPE
         SELECT 2
         FIND &WOPERADOR
         IF EOF()
            STORE "NO REGISTRADO EN MAESTRO" TO WOPEDES
         ELSE
            STORE USERNOM                    TO WOPEDES
         ENDIF
         STORE USERCODE TO WRUPOPE
         @ WLINEA , 00 SAY WOPERADOR
         @ WLINEA , 08 SAY WOPEDES
      ENDIF
      @ WLINEA , 40 SAY WCTA
      @ WLINEA , 48 SAY WCTADES
      SELECT 1
      SKIP
   ENDDO
   IF WSALIDA = "M"
      STORE "OPRIMA <ENTER> PARA FINALIZAR" TO MES
      DO AVISO WITH MES
   ELSE
      EJECT
      SET DEVI TO SCRE
   ENDIF
ENDDO
close data
close index
return

