SELECT 5
USE BCBENEFI INDEX BCBENEF1,BCBENEF2
STORE SPACE(12) TO WBENEFI
STORE .T. TO WCARGANDO
DO WHILE WCARGANDO
   @ 4,0 CLEAR to 7,60
   @ 5,0 TO 07,60
   @ 04,00 SAY "BENEFICIARIOS DE LAS OPERACIONES BANCARIAS"
   @ 06,2 SAY "CODIGO:"
   @ 06,10 GET WBENEFI
   READ
   IF WBENEFI = SPACE(12) .OR.READKEY()=12.OR.READKEY()=268
      EXIT
   ENDIF
   SELECT 5
   FIND &WBENEFI
   IF EOF()
      STORE .T. TO WINGRESA
      STORE .T. TO WMODIFICA
      STORE "BENEFICIARIO NO REGISTRADO, INGRESAR ? (S/N)" TO TEX
      STORE "SN" TO WCH
      DO PREGUNTA
      IF WCH = "N"
         LOOP
      ENDIF
      STORE SPACE(30)        TO WDESCRI
   ELSE
      STORE .F. TO WINGRESA
      STORE .F. TO WMODIFICA
      STORE DESCRI           TO WDESCRI
   ENDIF
   @ 6, 25 SAY WDESCRI
   IF .NOT. WMODIFICA
      STORE "OPCIONES: (M)ODIFICAR, (E)LIMINAR, (S)ALIR" TO TEX
      STORE "SME" TO WCH
      DO PREGUNTA
      STORE WCH TO WRESP
      IF WRESP= "S"
         LOOP
      ELSE
         IF WRESP= "M"
            STORE .T. TO WMODIFICA
         ELSE
            STORE "ESTA SEGURO QUE DESEA ELIMINAR ? (S/N)" TO TEX
            STORE "NS" TO WCH
            DO PREGUNTA
            IF WCH = "N"
               LOOP
            ELSE
               *** CHEQUEAR QUE EL BANCO ESTE SIN CONEXIONES EN BCOPERAC.DBF
               * SELECT 5
               * DELETE
               * LOOP
            ENDIF
         ENDIF
      ENDIF
   ENDIF

   IF WMODIFICA
      *** DESCRIPCION
      STORE .T. TO WACT
      DO WHILE WACT
         STORE "INGRESE EL NOMBRE DEL BENEFICIARIO" TO MES
         DO MENSAJE WITH MES
         IF USERNAME = SPACE(8)
            @ 6,25 GET WDESCRI
            READ
         ENDIF
         IF READKEY()=12.OR.READKEY()=268
            STORE .F. TO WCARGANDO
            EXIT
         ENDIF
         IF WDESCRI <> SPACE(30)
            EXIT
         ENDIF
      ENDDO
      IF .NOT. WCARGANDO
         EXIT
      ENDIF
   ENDIF
   STORE "CONFORME ? (S/N)" TO TEX
   STORE "SN" TO WCH
   DO PREGUNTA
   IF WCH = "N"
      LOOP
   ENDIF
   IF WINGRESA
      DO FILLOC
      APPEND BLANK
      UNLOCK
      DO RECLOC
      REPLACE CODIGO  WITH WBENEFI
   ENDIF
   DO RECLOC
   REPLACE DESCRI   WITH WDESCRI
   FLUSH
   UNLOCK
ENDDO
RETURN
