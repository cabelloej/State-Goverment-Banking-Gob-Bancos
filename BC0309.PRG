select PRBENEF
SAVE SCRE TO WSCRE99
store .t. to viendo
do while viendo
   RESTORE SCRE FROM WSCRE99
  * STORE 0 TO WTOTAL
   STORE 2 TO WORDEN
   STORE SPACE(12) TO XBENEFI
   @ 04,0 clear
   @ 04,0 to 12,40
   @ 04,2  SAY " BENEFICIARIOS DE LAS OPERACIONES "
   @ 06,1 say "BUSCAR      :"
   @ 08,1 say "ORDEN       :"
   @ 10,1 say "SALIDA (M/I):"
   @ 06,14 GET XBENEFI
   READ
   IF READKEY()=12 .OR. READKEY()=268
      EXIT
   ENDIF
   IF XBENEFI = SPACE(12)
      STORE "TODOS" TO WBENDES
   ELSE
      STORE "  "    TO WBENDES
   ENDIF
   @ 06,28 SAY WBENDES

   STORE "SELECCIONE EL ORDEN : 1=CODIGO, 2=NOMBRE" TO MES
   DO MENSAJE WITH MES
   @ 08,14 GET WORDEN PICTURE "#" RANGE 1,2
   READ
   SELECT PRBENEF
   SET ORDER TO WORDEN

   STORE "SELECCIONE LA SALIDA: (M)ONITOR, (I)MPRESORA" TO TEX
   STORE "MI" TO WCH
   DO PREGUNTA
   IF READKEY()=12 .OR. READKEY()=268
      LOOP
   ENDIF
   STORE WCH TO WSALIDA
   STORE 0   TO WPAGINA
   STORE 100 TO WLINEA
   IF WSALIDA = "I"
      STORE 55 TO WSALTO
      STORE "IMPRESORA" TO WSALIDES
   ELSE
      STORE 22 TO WSALTO
      STORE "MONITOR" TO WSALIDES
   ENDIF
   @ 10,20 SAY WSALIDES

   STORE "OPCIONES: (C)ONTINUAR, (S)ALIR" TO TEX
   STORE "CS" TO WCH
   DO PREGUNTA
   IF WCH = "S"
      exit
   ENDIF
   IF WSALIDA = "I"
      SET DEVI TO PRINT
   ELSE
      SET DEVI TO SCRE
   ENDIF

   SELECT PRBENEF
   GO TOP
   DO WHILE .NOT. EOF()
      *** FILTROS
      IF XBENEFI <> SPACE(12) .AND. ATC(ALLTRIM(XBENEFI),DESCRI)=0
         SELECT PRBENEF
         SKIP
         LOOP
      ENDIF
      *** FIN FILTROS
      STORE WLINEA+1 TO WLINEA
      IF WLINEA >=WSALTO
         STORE WPAGINA + 1 TO WPAGINA
         IF WSALIDA = "M"
            if WPAGINA <> 1
               STORE "OPRIMA <ENTER> PARA CONTINUAR o <ESC> PARA SALIR" TO MES
               DO AVISO WITH MES
               IF READKEY()=12 .OR. READKEY()=268
                  EXIT
               ENDIF
            endif
            @ 0,0 clear
         ENDIF
         IF WSALIDA = "M"
            @ 0,0 SAY QQWW
         ELSE
            @ 0,0 SAY CHR(14)+QQWW
         ENDIF
         @ 1,60 SAY "PAGINA:"+STR(WPAGINA,4)
         @ 2,0 SAY "LISTADO DE BENEFICIARIOS DE LAS OPERACIONES"
         @ 2,60 SAY "FECHA :"+DTOC(DATE())
         @ 4,00 SAY "CODIGO"
         @ 4,15 SAY "DESCRIPCION"
         @ 5,00 SAY "------"
         @ 5,15 SAY "------------------------------"
         STORE 6 TO WLINEA
      ENDIF
      @ WLINEA , 00 SAY CODIGO
      @ WLINEA , 15 SAY DESCRI
      SELECT PRBENEF
      SKIP
   ENDDO
   IF WSALIDA = "M"
      STORE "OPRIMA <ENTER> PARA FINALIZAR" TO MES
      DO AVISO WITH MES
   ELSE
      EJECT
      SET DEVI TO SCRE
   ENDIF
ENDDO
SELECT PRBENEF
SET ORDER TO PRBENEF1
return

